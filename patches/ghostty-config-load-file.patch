+/// Load the configuration from a specific file path.
+/// Path must be absolute or resolvable from the current working directory.
+export fn ghostty_config_load_file(self: *Config, path: [*:0]const u8) void {
+    const slice = std.mem.sliceTo(path, 0);
+    if (slice.len == 0) return;
+
+    var buf: [std.fs.max_path_bytes]u8 = undefined;
+    const resolved = if (std.fs.path.isAbsolute(slice))
+        slice
+    else
+        std.fs.cwd().realpath(slice, &buf) catch |err| {
+            log.err("error resolving config path err={}", .{err});
+            return;
+        };
+
+    self.loadFile(state.alloc, resolved) catch |err| {
+        log.err("error loading config file err={}", .{err});
+    };
+}
